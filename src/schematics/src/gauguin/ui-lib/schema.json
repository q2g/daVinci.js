{
    "$schema": "http://json-schema.org/schema",
    "id": "gauguin-library-schematic",
    "title": "Gauguin Library schematic",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "name of the project",
            "$default": {
                "$source": "projectName"
            }
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the simple schematic within.",
            "visible": false,
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "name": {
            "type": "string",
            "description": "the name of the library",
            "x-prompt": "Name of the library: ",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        }
    },
    "required": [
        "name"
    ]
}
